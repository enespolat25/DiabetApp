<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/editText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Hamile kalma sayısı"
        android:layout_margin="5dp"
        android:gravity="center"
        android:inputType="number|numberSigned" />

    <EditText
        android:id="@+id/editText3"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Glikoz: 2 saatte plazma glukoz konsantrasyonu"
        android:gravity="center"
        android:inputType="numberDecimal|numberSigned" />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Kan Basıncı (mm Hg)"
        android:layout_margin="5dp"
        android:gravity="center"
        android:inputType="numberDecimal|numberSigned" />

    <EditText
        android:id="@+id/editText5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Cilt kıvrım kalınlığını (mm)"
        android:layout_margin="5dp"
        android:gravity="center"
        android:inputType="numberDecimal|numberSigned" />

    <EditText
        android:id="@+id/editText6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="İnsülin:2 Saatlik (mu U / ml)"
        android:layout_margin="5dp"
        android:gravity="center"
        android:inputType="numberDecimal|numberSigned" />

    <EditText
        android:id="@+id/editText7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="BMI: Vücut kitle indeksi"
        android:layout_margin="5dp"
        android:gravity="center"
        android:inputType="numberDecimal|numberSigned" />

    <EditText
        android:id="@+id/editText8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:ems="10"
        android:hint="Diyabet soyağacı işlevi"
        android:gravity="center"
        android:inputType="numberDecimal|numberSigned" />

    <EditText
        android:id="@+id/editText9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Yaş"
        android:layout_margin="5dp"
        android:gravity="center"
        android:inputType="numberDecimal|numberSigned" />

    <Button
        android:id="@+id/button"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sonucu Gör" />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="center"
        android:textSize="21sp"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:inputType="textPersonName"
        android:text="Sonuç burada görülecektir." />
    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content"
        android:text="Değerleri Sıfırla" />

</LinearLayout>